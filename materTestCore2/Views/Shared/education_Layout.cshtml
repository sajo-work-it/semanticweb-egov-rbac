<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - materTestCore2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/materTestCore2.styles.css" asp-append-version="true" />
@*

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script src="~/js/dt/buttons.flash.min.js"></script>
    <script src="~/js/dt/jszip.min.js"></script>
    <script src="~/js/dt/pdfmake.min.js"></script>
    <script src="~/js/dt/vfs_fonts.js"></script>
    <script src="~/js/dt/buttons.html5.min.js"></script>
    <script src="~/js/dt/buttons.print.js"></script>


    <link href="~/Content/chosen.css" rel="stylesheet" />
    <script src="~/js/chosen.jquery.js"></script>

    <style>
        .chosen-container-single .chosen-search input[type="text"] {
            min-width: 100%;
        }

        .pageHeader {
            font-size: medium;
            text-align: center;
            font-weight: bolder;
        }

        .modal .select2-container--open .select2-dropdown {
            left: -17px;
        }

        .select2-container--open .select2-dropdown {
            -webkit-box-shadow: 10px 10px 23px 1px rgba(0,0,0,0.75);
            -moz-box-shadow: 10px 10px 23px 1px rgba(0,0,0,0.75);
            box-shadow: 10px 10px 23px 1px rgba(0,0,0,0.75);
        }

        .select2-container--default .select2-results__option--highlighted[aria-selected] {
            border-right: 3px solid rgba(236, 38, 38, 0.74);
        }

        .select2-container--default .select2-results__option[aria-selected="true"] {
            border-right-color: #000;
        }

        div.dt-buttons {
            display: none !important;
        }
    </style>
    <script>
        function fixFunc(id) {
            if (id) {
                showLoading();
                $.ajax({
                    url: "@Url.Action("FixDocument")",
                    type: "GET",
                    data: {
                        id: id
                    },
                    success: function (response) {
                        $(".modal-container").html(response);
                        stopLoading();
                        $(".modal-container").find('.modal').modal();
                    },
                    error: function (e1, e2, e3) {
                        stopLoading();
                    }
                });
            }
        }
    </script>*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">materTestCore2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Colleges" asp-action="Index">الكليات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="Index">المقررات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">الطلاب</a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - تطبيق وزارة التعليم العالي - 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
