@model materTestCore2.Models.EGovModels.StudentViewModel

@{
    Layout = "~/Views/Shared/education_Layout.cshtml";

    //ViewData["Title"] = "Edit";
}

@*<h1>Edit</h1>
*@
<h4>إضافة امتحان للطالب</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                @Model.StudentProfile.full_name
            </div>
            <div class="form-group">
                <input asp-for="StudentProfile.Uri" class="form-control" value="@Model.StudentProfile.Uri" hidden/>
                <span asp-validation-for="StudentProfile.Uri" class="text-danger"></span>
            </div>
            <select asp-for="course.Uri" asp-items="@Model.coursesList">
                <option>اختر المقرر</option>                
            </select>
            <div class="form-group">
                <label asp-for="exam.exam_grade" class="control-label"></label>
                <input asp-for="exam.exam_grade" class="form-control" />
                <span asp-validation-for="exam.exam_grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">العودة لقائمة الطلاب</a>
</div>

